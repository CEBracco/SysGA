{% extends 'rootBase.html.twig' %}

{% block defaultBody %}

<div class="row">
    <div class="col s10 offset-s1">
		<div class="row">
			<div class="col s12">
		        <div class="card-panel">
					<h4 class="title">Cuenta de Gestor√≠a</h4>
					<h5 class="title">Concesionaria: {{ concesionaria.nombre }}</h5>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col m6 s12">
				<div class="headCard">
					<div class="card">
						<div class="card-image">
							<div class="teal darken-3"></div>
							<span class="card-title">Saldo en Gestoria</span>
						</div>
						<div class="card-content">
							<h5 class='center-align'>${{ concesionaria.saldoDepositado|number_format(2, ',', '.') }}</h5>
						</div>
					</div>
				</div>
			</div>

			<div class="col m6 s12">
				<div class="headCard">
					<div class="card">
						<div class="card-image">
							<div class="teal darken-3"></div>
							<span class="card-title">Saldo en Registros</span>
						</div>
						<div class="card-content">
							<h5 class='center-align'>${{ concesionaria.getSaldoEnCuentas()|number_format(2, ',', '.') }}</h5>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col m12">
				<div class="card-panel">
					<h5>Detalle de saldos en Registros del Automotor</h5>
					<table id="tableCuentas" class="striped hovered">
						<thead>
							<tr>
								<th>Registro del Automotor</th>
								<th>Saldo</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								{% for cuenta in concesionaria.cuentas %}
									<td>{{ cuenta.registroDelAutomotor.nombre }}</td>
									<td>${{ cuenta.saldo|number_format(2, ',', '.') }}</td>
								{% endfor %}
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>

	</div>
</div>

{% endblock %}
