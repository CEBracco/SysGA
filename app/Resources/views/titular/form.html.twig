{% extends 'base.html.twig' %}

{% block body %}
    {% if edit is not defined or edit == false %}
        <h4 class="title">Nuevo Titular</h4>
    {% else %}
        <h4 class="title">Editar Titular</h4>
    {% endif %}

    {{ form_start(form) }}
        <div class="row">
            <div class="col m6">
                <div class="input-field">
                    {{ form_widget(form.nombre) }}
                    {{ form_label(form.nombre) }}
                </div>
            </div>
            <div class="col m6">
                <div class="input-field">
                    {{ form_widget(form.apellido) }}
                    {{ form_label(form.apellido) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col m12">
                <div class="input-field">
                    {{ form_widget(form.provincia) }}
                    {{ form_label(form.provincia) }}
                </div>
            </div>
        </div>

        <div class="center-align">
            <button class="btn waves-effect waves-light" type="submit"><i class="material-icons left">save</i>Guardar</button>
            <a href="{{ path('titular_index') }}"><button type="button" class="btn-flat waves-effect waves-light">Cancelar</button></a>
        </div>

        {{ form_errors(form) }}
    {{ form_end(form) }}
{% endblock %}
