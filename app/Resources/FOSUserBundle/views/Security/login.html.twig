{% trans_default_domain 'FOSUserBundle' %}
{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}

    <h4 class="title">Iniciar Sesión</h4>

    {% if error %}
        <div class="title">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="row">
            <div class="col s12">
                <div class="input-field">
                    <label for="username">Nombre de usuario</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col s12">
                <div class="input-field">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="_password" required="required" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col s12">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">Recordar</label>
            </div>
        </div>

        <div class="center-align">
            <input class="btn waves-effect waves-light" type="submit" id="_submit" name="_submit" value="Enviar" />
        </div>
    </form>



{% endblock fos_user_content %}
